<h1>Burger Munch</h1>

<h2>Menu of Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">omnomnom</button>
        </form>

       
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eated</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Make this Burger Again!</button>
        </form>

         

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour</label><br>
    <input type="radio" name="devour" value="1" checked> Eated<br>
    <input type="radio" name="devour" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
