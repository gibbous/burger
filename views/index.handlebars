 <div class="container">
      <div class="row">
        <div class="jumbotron">
          <h1>Burger Munch</h1>
            <p>Dream it. Post it. Eat it.</p>
        </div>
      </div>
</div>

<div class="container">
  <div class="row menu-panel">
    <div class="col-sm-4 col-md-4 col-lg-4">
      <h3 class="text-success">Burger Menu</h3>

      <div class="burger">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">omnomnom</button>
              </form>

             
            </div>
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4">
      <h2>Add a Burger</h2>
        <div>
        <img src="/public/assets/img/burger.png" alt="happy-burger">
        </div>
          <form class="create-update-form" action="burgers/create" method="POST">

            <div class="form-group">
              <label for="bg">Burger Name:</label>
              <input type="text" id="bg" name="burger_name">
            </div>

            <div class="form-group">
              <input type="hidden" name="devoured" value="0"> 
            </div>

            <button class="btn" type="submit">Add Burger</button>
          </form>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4">
      <h3 class="text-success">Recently Devoured</h3>

        <div class="burger">
          {{#each burgers}}
            {{#if this.devoured}}
              <div>
                {{this.burger_name}}

                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button type="submit">Make Again!</button>
                </form>

                 

              </div>
            {{/if}}
          {{/each}}
        </div>
    </div>

  </div>
</div>





