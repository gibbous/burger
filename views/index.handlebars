 <div class="container">
      <div class="row">
        <div class="jumbotron">
          <h1>Burger Munch</h1>
            <p class="text-success">Dream it. Post it. Eat it.</p>
        </div>
      </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4">
      <h2>Menu of Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">omnomnom</button>
              </form>

             
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4">
      <h2>Add a Burger</h2>
          <form class="create-update-form" action="burgers/create" method="POST">

            <div class="form-group">
              <label for="bg">Burger Name:</label>
              <input type="text" id="bg" name="burger_name">
            </div>

            <div class="form-group">
              <label for="devour">Devour</label><br>
              <input type="radio" name="devoured" value="0"> Available
            </div>

            <button type="submit">Add Burger</button>
          </form>
    </div>
    
    <div class="col-sm-4 col-md-4 col-lg-4">
      <h2>Burgers that have been eated</h2>

        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.burger_name}}

                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button type="submit">Make this Burger Again!</button>
                </form>

                 

              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>

  </div>
</div>





